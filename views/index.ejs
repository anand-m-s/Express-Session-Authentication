<%-include('header')-%>

<div class="text-center center-div" id="login">
    <div class="container  py-4">
        <div class="title pb-3 text-white">
            <h2 class="font-weight-bold">Login page</h2>
            <span>Authenticate and Proceed</span>
            <% if (typeof logout !== 'undefined') { %>
                <div class="alert alert-success text-center">
                    <%= logout %>
                </div>
            <% } %>
            <% if (typeof errorMessage !== 'undefined') { %>
                <div class="alert alert-danger text-center">
                    <%= errorMessage %>
                </div>
            <% } %>
            
            
        </div>
        <form action="/route/login" method="POST">
            <div class="form-group">
                <input type="email" class="form-control transparentInput small-input" placeholder="Email" name="email">
            </div>
            <div class="form-group pt-2">
                <input type="password" class="form-control transparentInput small-input" placeholder="Password" name="password">
            </div>
            <button type="submit" class="btn mt-2 gradient-button small-button">Login</button>
        </form>
    </div>
</div>



<%-include('footer')-%>



